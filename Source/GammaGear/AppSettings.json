{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Error"
        },
        "File": {
            "Path": "app.log",
            "Append": true,
            "MinLevel": "Warning", // min level for the file logger
            "FileSizeLimitBytes": 4000000, // use to activate rolling file behaviour
            "MaxRollingFiles": 1 // use to specify max number of log files
        }
    }
}

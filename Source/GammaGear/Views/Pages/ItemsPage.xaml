<Page
    x:Class="GammaGear.Views.Pages.ItemsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lc="clr-namespace:GammaGear.Views.Controls"
    xmlns:local="clr-namespace:GammaGear.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Items"
    d:DataContext="{d:DesignInstance local:ItemsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
    ScrollViewer.CanContentScroll="False"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:TextBox
                Grid.Column="0"
                Width="250"
                Margin="3"
                Icon="Search24"
                PlaceholderText="Search..." />
            <ToggleButton
                x:Name="FilterToggle"
                Grid.Column="1"
                Margin="3"
                Content="Filter..." />

            <ui:Flyout
                Grid.Column="1"
                IsOpen="{Binding ElementName=FilterToggle, Path=IsChecked}"
                Placement="Bottom">
                <Grid>
                    <ui:Card>
                        <StackPanel>
                            <WrapPanel>
                                <ui:Button>
                                    <ui:Image Source="../../Assets/Images/(Icon)_Stats_Health.png" />
                                </ui:Button>
                                <ui:Button>
                                    <ui:Image Source="../../Assets/Images/(Icon)_Stats_Health.png" />
                                </ui:Button>
                                <ui:Button>
                                    <ui:Image Source="../../Assets/Images/(Icon)_Stats_Health.png" />
                                </ui:Button>
                            </WrapPanel>
                            <Label Content="Level" Target="{Binding ElementName=FilterLevel}" />
                            <ui:NumberBox
                                x:Name="FilterLevel"
                                LargeChange="1"
                                MaxDecimalPlaces="0"
                                Maximum="170"
                                Minimum="1"
                                Value="170" />
                            <ui:Button Content="Filter" />
                        </StackPanel>
                    </ui:Card>
                </Grid>
            </ui:Flyout>

            <ui:Button
                Grid.Column="2"
                Margin="3"
                Click="Button_Click"
                Content="Sort" />

            <ui:ToggleSwitch
                x:Name="CompareToggle"
                Grid.Column="4"
                Command="{Binding ViewModel.CompareSelectionChangedCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsChecked}"
                Content="Compare" />
        </Grid>
        <ui:ListView
            x:Name="WizItemsView"
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,0,10"
            ItemsSource="{Binding ViewModel.Items}"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            SelectionChanged="OnSelectionChanged"
            SelectionMode="Single">
            <ui:ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ui:VirtualizingWrapPanel />
                </ItemsPanelTemplate>
            </ui:ListView.ItemsPanel>
            <ui:ListView.ItemTemplate>
                <DataTemplate>
                    <lc:ItemView />
                </DataTemplate>
            </ui:ListView.ItemTemplate>
        </ui:ListView>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="600">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Width="300"
                Visibility="{Binding ElementName=CompareToggle, Path=IsChecked, Converter={StaticResource BoolToCollapsedConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <lc:CurrentItem
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    DataContext="{Binding Path=ViewModel.ComparedItem}" />
                <ui:Button
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    Command="{Binding Path=ViewModel.CompareUpdate}"
                    Content="Update" />
                <ui:Button
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    Content="Add to layout" />
            </Grid>

            <Grid
                Grid.Column="1"
                MinWidth="300"
                MaxWidth="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <lc:CurrentItem
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    DataContext="{Binding ElementName=WizItemsView, Path=SelectedItem}" />
                <ui:Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Content="Add to layout" />
            </Grid>
        </Grid>
    </Grid>
</Page>

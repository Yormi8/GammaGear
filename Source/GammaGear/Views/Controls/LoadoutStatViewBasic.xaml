<UserControl
    x:Class="GammaGear.Views.Controls.LoadoutStatViewBasic"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GammaGear.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:GammaGear.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:ItemLoadoutViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="BasicStatsPanel" Grid.Column="0">
            <StackPanel Orientation="Horizontal">
                <ui:Image
                    Width="24"
                    Height="24"
                    Source="pack://application:,,,/GammaGear;component/Assets/Images/(Icon)_Stats_Health.png" />
                <ui:TextBlock Background="{ui:ThemeResource ControlFillColorTertiaryBrush}" Text="{Binding CalculatedStats.MaxHealth}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
